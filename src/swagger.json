{
  "openapi": "3.0.0",
  "info": {
    "title": "Dictionary API",
    "description": "A dictionary API that provides word definitions and related information",
    "version": "1.0.0",
    "contact": {
      "name": "Nwike Odigwe",
      "url": "https://github.com/nwikeodigwe/dictionary"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/en": {
      "get": {
        "summary": "Get English dictionary entry",
        "description": "Returns a test hello world message",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Hello World"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {}
  }
}
